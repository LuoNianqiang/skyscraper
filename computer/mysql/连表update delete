CREATE TABLE A1 (id  INT(10), NAME VARCHAR(20));
CREATE TABLE A2 (id  INT(10), NAME VARCHAR(20));
ALTER TABLE A1 ADD PRIMARY KEY (id);ALTER TABLE A2 ADD PRIMARY KEY (id);
INSERT INTO A1 VALUES(1, 1),(2,2);INSERT INTO A2 VALUES(1, 'a'),(2,'b');
SELECT * FROM A1;SELECT * FROM A2;
TRUNCATE TABLE A1;TRUNCATE TABLE A2;
-- 连表updateUPDATE A1, A2 SET A1.`name` = A2.`NAME` WHERE A1.`id` = A2.`id`;
DELETE FROM A1;
-- 连表deleteDELETE A1 FROM A1, A2 WHERE A1.`id` = A2.`id`;
